{
    "compilerOptions": {
        "noEmit": true,
        "target": "es2018",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": "./"
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "exclude": ["node_modules"]
}
